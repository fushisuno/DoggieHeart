  </section>
</main>

<div id="uploadModal" class="modal">
  <div class="modal-content">
    <button class="modal-close">&times;</button>
    <div class="modal-header">
      <h2>Carregar Novo Documento</h2>
    </div>
    <form class="upload-form" id="uploadForm">
      <div class="file-input-wrapper">
        <svg style="width:48px;height:48px;color:var(--primary);margin-bottom:1rem" viewBox="0 0 24 24">
          <path fill="currentColor" d="M14,13V17H10V13H7L12,8L17,13M19.35,10.03C18.67,6.59 15.64,4 12,4C9.11,4 6.6,5.64 5.35,8.03C2.34,8.36 0,10.9 0,14A6,6 0 0,0 6,20H19A5,5 0 0,0 24,15C24,12.36 21.95,10.22 19.35,10.03Z" />
        </svg>
        <input type="file" id="fileInput" accept=".jpg,.jpeg,.png,.pdf,.doc,.docx" style="display:none">
        <p>Clique para selecionar ou arraste seu arquivo aqui</p>
        <p class="file-types">Formatos aceitos: JPG, PNG, PDF, DOC, DOCX (máx. 10MB)</p>
      </div>
      
      <div>
        <label for="documentDescription">Descrição do Documento:</label>
        <textarea id="documentDescription" class="description-input" 
                  placeholder="Ex: Receita da consulta de vacinação"></textarea>
      </div>
      
      <div class="modal-actions">
        <button type="button" class="btn btn-secondary" id="cancelUpload">Cancelar</button>
        <button type="submit" class="btn btn-primary">Salvar</button>
      </div>
    </form>
  </div>
</div>

<div id="viewDocumentModal" class="modal">
  <div class="modal-content modal-lg">
    <button class="modal-close">&times;</button>
    <div class="modal-header">
      <h2 id="viewDocumentTitle">Visualizar Documento</h2>
    </div>
    <div class="document-viewer">
      <div class="document-preview">
        <iframe id="documentFrame" title="Document Preview"></iframe>
      </div>
      <div class="document-info">
        <div class="info-section">
          <h3>Informações do Documento</h3>
          <p><strong>Data de Upload:</strong> <span id="docUploadDate"></span></p>
          <p><strong>Tipo:</strong> <span id="docType"></span></p>
        </div>
        <div class="notes-section">
          <h3>Notas</h3>
          <textarea id="documentNotes" placeholder="Adicione suas anotações aqui..."></textarea>
          <button class="btn btn-secondary" id="saveNotes">Salvar Notas</button>
        </div>
        <div class="modal-actions">
          <button class="btn btn-primary" id="downloadDocument">
            <svg style="width:20px;height:20px" viewBox="0 0 24 24">
              <path fill="currentColor" d="M5,20H19V18H5M19,9H15V3H9V9H5L12,16L19,9Z" />
            </svg>
            Baixar
          </button>
          <button class="btn btn-secondary" id="closeViewer">Fechar</button>
        </div>
      </div>
    </div>
  </div>
</div>

<div id="editDocumentModal" class="modal">
  <div class="modal-content">
    <button class="modal-close">&times;</button>
    <div class="modal-header">
      <h2>Editar Documento</h2>
    </div>
    <form class="edit-form" id="editForm">
      <div class="form-group">
        <label for="editTitle">Título</label>
        <input type="text" id="editTitle" required>
      </div>
      
      <div class="form-group">
        <label for="editDescription">Descrição</label>
        <textarea id="editDescription" rows="4"></textarea>
      </div>
      
      <div class="form-group">
        <label>
          <input type="checkbox" id="editImportant">
          Marcar como Importante
        </label>
      </div>
      
      <div class="modal-actions">
        <button type="button" class="btn btn-secondary" id="cancelEdit">Cancelar</button>
        <button type="submit" class="btn btn-primary">Salvar Alterações</button>
      </div>
    </form>
  </div>
</div>

