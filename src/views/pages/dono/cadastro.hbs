<title>Cadastro</title>

<main class="main-form">
    <div class="form-container">
        <div class="form-header">
            <h1 class="form-title">Crie sua conta!</h1>
            <p class="form-subtitle">Preencha os campos para se cadastrar</p>
        </div>

        <form id="formForm" action="/dono/create" method="POST">
            <div class="form-group">
                <label class="form-label" for="nome">Nome</label>
                <input type="text" id="nome" name="nome" class="form-input" required>
            </div>

            <div class="form-group">
                <label class="form-label" for="sobrenome">Sobrenome</label>
                <input type="text" id="sobrenome" name="sobrenome" class="form-input" required>
            </div>

            <div class="form-group">
                <label class="form-label" for="cpf">CPF</label>
                <input type="text" id="cpf" name="cpf" class="form-input" pattern="\d{3}\.\d{3}\.\d{3}-\d{2}"
                    placeholder="000.000.000-00" required>
            </div>

            <div class="form-group">
                <label class="form-label" for="user_name">Nome de Usuário</label>
                <input type="text" id="user_name" name="user_name" class="form-input" required>
            </div>

            <div class="form-group">
                <label class="form-label" for="email">Email</label>
                <input type="email" id="email" name="email" class="form-input" required>
            </div>

            <div class="form-group">
                <label class="form-label" for="senha">Senha</label>
                <input type="password" id="senha" name="senha" class="form-input" required>
            </div>

            <button type="submit" class="form-btn">Cadastrar</button>

            <p class="register-link">
                Já tem uma conta? <a href="/login">Faça login</a>
            </p>
        </form>
    </div>
</main>