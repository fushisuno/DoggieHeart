<main>
    <section class="agenda-header">
        <h1 class="agenda-title">Agenda de Consultas e Exames</h1>
        <p class="agenda-subtitle">Gerencie todas as consultas e exames dos seus pets em um só lugar</p>
    </section>

    <section class="calendar-section">
        <div class="calendar-header">
            <div class="month-navigation">
                <button class="nav-btn" id="prevMonth">&lt;</button>
                <div class="current-month" id="currentMonth">Dezembro 2023</div>
                <button class="nav-btn" id="nextMonth">&gt;</button>
            </div>
        </div>

        <div class="calendar-grid">
            <div class="calendar-day-header">Dom</div>
            <div class="calendar-day-header">Seg</div>
            <div class="calendar-day-header">Ter</div>
            <div class="calendar-day-header">Qua</div>
            <div class="calendar-day-header">Qui</div>
            <div class="calendar-day-header">Sex</div>
            <div class="calendar-day-header">Sáb</div>
        </div>
        <div id="calendarDays" class="calendar-grid"></div>

        <div class="legend">
            <div class="legend-item">
                <div class="legend-dot" style="background-color: var(--secondary)"></div>
                <span>Consultas</span>
            </div>
            <div class="legend-item">
                <div class="legend-dot" style="background-color: var(--primary)"></div>
                <span>Exames</span>
            </div>
        </div>
    </section>

    <section class="appointments-section">
        <h2>Compromissos Agendados</h2>
        <table class="appointments-table">
            <thead>
                <tr>
                    <th>Data e Hora</th>
                    <th>Tipo</th>
                    <th>Animal</th>
                    <th>Veterinário</th>
                    <th>Situação</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody id="appointmentsTableBody">
                <tr>
                    <td>05/12/2023, 14:30</td>
                    <td>Consulta</td>
                    <td>Rex</td>
                    <td>Dr. Silva</td>
                    <td><span class="status-badge status-confirmed">Confirmada</span></td>
                    <td class="action-buttons">
                        <button class="btn btn-edit" data-id="1">Editar</button>
                        <button class="btn btn-cancel" data-id="1">Cancelar</button>
                    </td>
                </tr>
            </tbody>
        </table>
    </section>

    <section class="additional-info-section">
        <div class="info-container">
            <div class="preparation-tips">
                <h2>Prepare-se para sua Consulta</h2>
