<div class="modal" id="vetRegistrationModal">
    <div class="modal-content">
        <h2>Cadastro de Veterinária</h2>
        <form id="vetRegistrationForm" action="/send-email" method="POST">

            <div class="form-group">
                <label for="vetName">Nome do Responsável</label>
                <input type="text" id="vetNameResp" name="nomeResponsavel" class="form-control" required>
            </div>

            <div class="form-group">
                <label for="vetName">Nome da Veterinária</label>
                <input type="text" id="vetName" name="nome" class="form-control" required>
            </div>

            <div class="form-group">
                <label for="city">Cidade</label>
                <input type="text" id="city" name="cidade" class="form-control" required>
            </div>

            <div class="form-group">
                <label for="street">Rua</label>
                <input type="text" id="street" name="rua" class="form-control" required>
            </div>

            <div class="form-group">
                <label for="number">Número</label>
                <input type="text" id="number" name="numero" class="form-control" required>
            </div>

            <div class="form-group">
                <label for="neighborhood">Bairro</label>
                <input type="text" id="neighborhood" name="bairro" class="form-control" required>
            </div>

            <div class="form-group">
                <label for="state">Estado</label>
                <input type="text" id="state" name="estado" class="form-control" required>
            </div>

            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" id="email" name="email" class="form-control" required>
            </div>

            <div class="form-actions">
                <button type="button" class="btn-cancel">Cancelar</button>
                <button type="submit" class="action_button">Cadastrar Veterinária</button>
            </div>
        </form>
    </div>
</div>
